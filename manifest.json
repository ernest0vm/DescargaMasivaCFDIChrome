{
  "manifest_version": 3,
  "name": "Descarga Masiva Facturas XML CFDI SAT México",
  "description": "Descarga masivamente los CFDI (XML y PDF) del SAT México",
  "version": "0.24",
  "minimum_chrome_version": "88.0.0",
  "permissions": ["downloads", "activeTab", "scripting"],
  "host_permissions": ["https://portalcfdi.facturaelectronica.sat.gob.mx/*"],
  "action": {
    "default_icon": {
      "16": "images/icon-16.png",
      "32": "images/icon-32.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    },
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  }
}
